@{
    ViewData["Title"] = "StreamCapture Schedule Grid";
}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<p>Use this area to provide additional information</p>
    <div id="jsGrid"></div>

@section Scripts
{        
<script>

    $("#jsGrid").jsGrid({
        width: "100%",
        height: "400px",

        inserting: true,
        editing: true,
        sorting: true,
        paging: true,

    controller: {
        loadData: function(filter) {
            return $.ajax({
                type: "GET",
                url: "/api/schedule",
                data: filter,
                dataType: "json"
            });
        },

        insertItem: function(item) {
            return $.ajax({
                type: "POST",
                url: "/api/schedule",
                data: item,
                dataType: "json"
            });
        },

        updateItem: function(item) {
            return $.ajax({
                type: "PUT",
                url: "/api/schedule/" + item.ID,
                data: item,
                dataType: "json"
            });
        },

        deleteItem: function(item) {
            return $.ajax({
                type: "DELETE",
                url: "/api/schedule/" + item.ID,
                dataType: "json"
            });
        }
    },

        fields: [
            { name: "description", type: "text", width: 150 },
            { name: "strStartDT", type: "text", width: 50 },
            { type: "control" }
        ]
    });
</script>
}

