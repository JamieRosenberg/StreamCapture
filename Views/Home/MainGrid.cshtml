@{
    ViewData["Title"] = "StreamCapture Schedule Grid";
}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<p>Use this area to provide additional information (datatable)</p>

<table id="list"><tr><td></td></tr></table> 
<div id="pager"></div>  

@section Scripts
{        
    <script>

    $("#list").jqGrid({
        url: "/api/schedule",
        editurl: "/api/edit",
        datatype: "JSON",
        mtype: "GET",
        colModel: [            
            { label: "Description", name: "description", width: 600, editable: true },
            { label: "Start Date/Time", name: "strStartDT", width: 150, editable: true, sorttype:'number' },
            { label: "Duration", name: "strDuration", width: 50, editable: true },
            { label: "Queued", name: "queuedFlag", width: 50 },
            { label: "Process", name: "processSpawnedFlag  ", width: 50 },
            { label: "Over", name: "tooManyFlag ", width: 50 },
            { label: "Partial", name: "partialFlag ", width: 50 },
            { label: "Done", name: "completedFlag  ", width: 50 },
            {
                label: "Edit",
                name: "actions",
                width: 60,
                formatter: "actions",
                formatoptions: {
                    keys: true,
                    editOptions: {},
                    addOptions: {},
                    delOptions: {}
                }       
            }            
        ],
        pager: "#pager",
        rowNum: 20,
        onSelectRow: editRow,
        loadonce : true,
        viewrecords: true,
        gridview: true,     
        caption: "StreamCapture Schedule"
    }); 

    var lastSelection;

    function editRow(myid) {
        if (myid && myid !== lastSelection) {
            var grid = $("#jqGrid");
            grid.jqGrid('restoreRow',lastSelection);
            grid.jqGrid('editRow',myid, {keys: true} );
            lastSelection = myid;
        }
    }

    </script>
}